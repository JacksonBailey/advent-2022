root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = true # It's actually just annoying

[*.{bat, cmd, ps1}]
charset = latin1
end_of_line = crlf

[*.{sh, bash}]
end_of_line = lf

[*.c]
indent_style = tab
tab_width = 8
indent_size = 8
